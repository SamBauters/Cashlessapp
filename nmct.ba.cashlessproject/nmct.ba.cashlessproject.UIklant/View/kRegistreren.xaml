<UserControl x:Class="nmct.ba.cashlessproject.UIklant.View.kRegistreren"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:nmct.ba.cashlessproject.UIklant.ViewModel"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="750" d:DesignWidth="1200">
    <UserControl.DataContext>
        <vm:kRegistrerenVM/>
    </UserControl.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="50*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Registratie van een nieuwe klant:" VerticalAlignment="Center" Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="2" />
        <TextBlock Text="Naam:" Grid.Column="1" Grid.Row="1" VerticalAlignment="Center"/>
        <TextBlock Text="Adres:" Grid.Column="1" Grid.Row="2" VerticalAlignment="Center"/>

        <TextBox Text="{Binding SelectedCustomer.CustomerName}" Name="txbVoornaam" Grid.Column="2" Grid.Row="1" Grid.ColumnSpan="2" Height="25" />
        <TextBox Text="{Binding SelectedCustomer.Address}" Name="txbAdres" Grid.Column="2" Grid.Row="2" Grid.ColumnSpan="2" Height="25" />

        <Image Source="{Binding SelectedCustomer.Picture}" Grid.Column="4" Grid.Row="1" Grid.RowSpan="4" Margin="10,0" />

        <Button Command="{Binding LeesKaartCommand}" Content="Lees ID" Grid.Row="5" Grid.Column="1"/>
        <Button Command="{Binding ClickSaveCommand}" Content="Opslaan" Grid.Row="5" Grid.Column="3" Margin="5,2,5,0"/>
        <Button Command="{Binding AnnulerenCommand}" Content="Annuleren" Grid.Row="5" Grid.Column="4"/>
        <Button Command="{Binding OpladenCommand}" Content="Opladen" Grid.Row="5" Grid.Column="2"/>
    </Grid>
</UserControl>